{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="container">
        <div class="card">
           <div class="card-title"> <h1>Veuillez-vous inscrire!</h1> </div>
            <div class="card-body">
                <div class="form-group">
                    {{ form_start(form) }}
                        {{form_widget(form)}}
                    <button type="submit" class="btn btn-success" style="margin-top: 2%; margin-bottom: 3% ">S'inscrire</button>
                    {{ form_end(form)}}
                </div>
            </div>
        </div>
    </div>
 
{% endblock %}
