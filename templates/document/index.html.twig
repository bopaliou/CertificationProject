{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <h1>Document index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Numero</th>
                <th>DateEnregistrement</th>
                <th>DateExpiration</th>
                <th>Adresse</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.type }}</td>
                <td>{{ document.numero }}</td>
                <td>{{ document.dateEnregistrement ? document.dateEnregistrement|date('Y-m-d') : '' }}</td>
                <td>{{ document.dateExpiration ? document.dateExpiration|date('Y-m-d') : '' }}</td>
                <td>{{ document.adresse }}</td>
                <td>{{ document.etat ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('document_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('document_new') }}">Create new</a>
{% endblock %}
